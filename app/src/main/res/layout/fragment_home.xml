<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_UName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, User"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/blue_primary"
            android:textSize="24dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            app:contentPadding="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/blue_secondary"
            app:cardElevation="0dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Confirmed Cases:"
                android:textColor="@color/blue_primary"
                android:textSize="10dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/tv_confirmedCase"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7979"
                android:textStyle="bold"
                android:textColor="@color/blue_primary"
                android:textSize="24dp"/>

        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight=".45"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/orange_secondary"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Daily Death Cases:"
                    android:textColor="@color/orange_primary"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv_deathCase"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7979"
                    android:textStyle="bold"
                    android:textColor="@color/orange_primary"
                    android:textSize="24dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight=".45"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/green_secondary"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Daily Recovered Cases:"
                    android:textColor="@color/green_primary"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv_recoveredCase"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_primary"
                    android:textStyle="bold"
                    android:text="7979"
                    android:textSize="24dp"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            app:contentPadding="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/blue_secondary"
            app:cardElevation="0dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Active Cases:"
                android:textColor="@color/blue_primary"
                android:textSize="10dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/tv_activeCase"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7979"
                android:textStyle="bold"
                android:textColor="@color/blue_primary"
                android:textSize="24dp"/>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccination Progress: "
                android:textColor="@color/grey_one"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_vacProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/green_primary"
                android:text="NA%"/>

        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pb_vacProgress"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            app:trackThickness="15dp"
            app:trackCornerRadius="5dp"
            app:trackColor="@color/green_secondary"
            app:indicatorColor="@color/green_primary"
            />

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Status: "
            android:textColor="@color/blue_primary"
            android:fontFamily="sans-serif-light"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_risk"
                android:layout_width="0dp"
                android:layout_weight=".45"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/blue_secondary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight=".9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/risk_icon"
                            android:src="@drawable/ic_check_circle_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/risk_title"
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Risk Status"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/risk_updated"
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Updated: "
                            android:textColor="@color/blue_primary"
                            android:textSize="10dp"/>

                        <TextView
                            android:id="@+id/risk_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DD/MM/YYYY"
                            android:textColor="@color/blue_primary"
                            android:textSize="10dp"/>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_vac"
                android:layout_width="0dp"
                android:layout_weight=".45"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green_secondary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight=".9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/vac_icon"
                            android:src="@drawable/ic_user_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:id="@+id/vac_title"
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vaccination Status"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/vac_updated"
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green_primary"
                            android:text="Date Updated: "
                            android:textSize="10dp"/>

                        <TextView
                            android:id="@+id/vac_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green_primary"
                            android:text="DD/MM/YYYY"
                            android:textSize="10dp"/>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Tasks: "
            android:fontFamily="sans-serif-light"
            android:textColor="@color/blue_primary"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_todo"
                android:layout_width="0dp"
                android:layout_weight=".45"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/blue_secondary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight=".9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/ic_alert_circle_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Things To Do"
                            android:textStyle="bold"
                            android:textColor="@color/blue_primary"
                            android:textSize="12dp"/>

                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View all tasks that require actions"
                            android:textColor="@color/blue_primary"
                            android:textSize="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_toknow"
                android:layout_width="0dp"
                android:layout_weight=".45"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green_secondary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight=".9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/ic_info_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Things To Know"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary"
                            android:textSize="12dp"/>

                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View latest updates and informormation"
                            android:textColor="@color/green_primary"
                            android:textSize="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>